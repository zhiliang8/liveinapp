<fieldset>
  <legend>忘记密码？</legend>
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :wrapper => :inline) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "找回密码" %>
  </div>
<% end %>
</fieldset>
<%= render :partial => "devise/shared/links" %>