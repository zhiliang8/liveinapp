<h2></h2>
<fieldset>
  <legend>注册</legend>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :wrapper => :inline) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :name, :required => true, :autofocus => true%>
    <%= f.input :email, :required => true, :placeholder => "foo@bar.com" %>
    <%= f.input :password, :required => true, :hint => false %>
    <%= f.input :password_confirmation, :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "注册", :class => "primary" %>
  </div>
<% end %>
</fieldset>
<%= render :partial => "devise/shared/links" %>
