<fieldset>
  <legend>个人资料设置</legend>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :wrapper => :inline) do |f| %>
  <div class="inputs">
    <%= f.input :name, :required => true, :autofocus => true, :hint => "请不要轻易修改"%>
    <%= f.input :email, :required => true, :autofocus => true%>
    <%= f.input :password, :required => false, :hint => false  %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "确认修改", :class => :primary %>
  </div>
<% end %>
</fieldset>
