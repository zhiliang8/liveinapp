<fieldset>
  <legend>登录</legend>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :wrapper => :inline) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false, :hint => false %>
    <% if devise_mapping.rememberable? -%>
       <div class="clearfix">
          <label></label>
          <div class="input">
            <div class="inputs-list"><label for="user_remember_me"><%= f.check_box :remember_me, :style => "width:auto;" %> <%= t("common.remember_me") %></label></div>
          </div>
        </div>
    <% end -%>
  </div>

  <div class="actions">
    <%= f.button :submit, "登录", :class => "primary" %>
  </div>
<% end %>
</fieldset>
<% content_for :sidebar do %>
<%= render :partial => "devise/shared/links" %>
<% end %>
