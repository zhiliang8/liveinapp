<div class="span12">
  <div class="box app-wrap">
    <div class="apps">
      <%= render :partial => "common/app", :locals => {:app => @app}%>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <div class="box">
        <h2>
          价格表
          <div class="pull-right">
            <a href="<%= @app.pricing_url%>" target="_blank"><i class="icon-eye-open"></i>官方链接</a>
          </div>
        </h2>
        
      </div>
    </div>
    <div class="span8">
      <div id="comments" class="box">
        <h2>评论，共<%= @app.comments_count%>条评论</h2>
        <ul class="unstyled">
          <%= render :partial => "comments/comment", :collection => @comments, :locals => {:app => @app }%>
          <li>
            <%= simple_form_for Comment.new, :remote => true, :url => app_comments_path(@app), :html => { :class => "form-horizontal" } do |f| %>
              <%= f.input :body, :as => :text, :label => false %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="span4">
      <div class="box">
        <h2>同类应用</h2>
        <ul class="thumbnails">
          <% @other_apps.each do |app|%>
            <li>
              <%= link_to(image_tag(app.logo_url(:thumb)), app)%><br />
              <%= link_to(app.name, app)%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>