<!DOCTYPE html>
<html>
	<head>
		<title>Liveinapp</title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="topbar">
			<div class="topbar-inner">
				<div class="container">
					<a class="brand" href="/"><%= Settings.app_name %></a>
					<ul class="nav">
						<li class="active">
							<a href="/">首页</a>
						</li>
						<li>
							<a href="#">项目管理</a>
						</li>
						<li>
							<a href="#">主机服务</a>
						</li>
						<li>
              <a href="#">域名服务</a>
            </li>
					</ul>
					<form class="pull-left" action="">
            <input type="text" placeholder="搜索">
          </form>
					<ul class="nav secondary-nav" id="userbar">
					  <% if user_signed_in? %>
					    <li class="dropdown">
					      <a href="#" class="dropdown-toggle"><%= current_user.name%></a>
					      <ul class="dropdown-menu">
					        <li><%= link_to('个人主页', user_path(current_user.name)) %></li>
					        <% if current_user.admin? %>
					        <li><%= link_to('后台管理', user_path(current_user.name)) %></li>
					        <% end %>
					        <li><%= link_to('个人资料设置', edit_user_registration_path) %></li>
                  <li><%= link_to('退出', destroy_user_session_path, :method => :delete) %></li>
                </ul>
              </li> 
            <% else %>
              <li><%= link_to('注册', new_user_registration_path)  %></li>
              <li><%= link_to('登录', new_user_session_path)  %></li>
            <% end %>
					</ul>
				</div>
			</div>
		</div>
		<div class="container">
		  <div class="row">
  		  <%= render "common/nodes"%>
  		  <div class="span12">
  		    <%= notice_message %>
  		    <%= yield %>
  		  </div>
  		</div>
  		<footer>
        <p><%= raw Settings.foot_html %></p>
      </footer>
		</div>
	</body>
</html>
