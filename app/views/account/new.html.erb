<div class="box" id="signup-form">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
<fieldset>
  <legend>
    注册
  </legend>
  <%= f.input :name, :required => true, :autofocus => true%>
  <%= f.input :email, :required => true, :placeholder => "foo@bar.com" %>
  <%= f.input :password, :required => true, :hint => false %>
  <%= f.input :password_confirmation, :required => true %>
   <div class="form-actions">
      <%= f.button :submit, "注册", :class => "btn-primary"  %> 或者 <%= link_to "已经注册过?", new_session_path(resource_name) %>
    </div>
</fieldset>
<% end %>
</div>
